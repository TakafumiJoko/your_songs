<!DOCTYPE html>
<html>
  <head>
    <title>YourSongs</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src="https://kit.fontawesome.com/bcaa78cd93.js" crossorigin="anonymous"></script>
  </head>

  <body>
    <header>
      <div class="header-logo">
        <% if @current_user %>
          <%= link_to("YourSongs", "/posts") %>
        <% else %>
          <%= link_to("YourSongs", "/") %>
        <% end %>
      </div>
      <div class="header-menus">
        <ul>
        <% if @current_user %>
          <li>
            <%= link_to(@current_user.name, "/users/#{@current_user.id}") %>
          </li>
          <li>
            <%= link_to("投稿一覧", "/posts") %>
          </li>
          <li>
            <%= link_to("新規投稿", "/posts/new") %>
          </li>
          <li>
            <%= link_to("ユーザー一覧", "/users") %> 
          </li>
          <li>
            <%= link_to("ログアウト", "/logout", method: :post) %>
          </li>
        <% else %>
          <li>
            <%= link_to("YourSongsとは", "/about") %>
          </li>
          <li>
            <%= link_to("新規登録", "/signup") %> 
          </li>
          <li>
            <%= link_to("ログイン", "/login") %>
          </li>
        <% end %>
        </ul>
      </div>
    </header>
    <% if flash[:notice] %>
      <div class="flash">
        <%= flash[:notice] %>
      </div>
    <% end %>
   <%= yield %>
  </body>
</html>
