<!DOCTYPE html>
<html>
  <head>
    <title>YourSongs</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <div class="header-logo">
        <%= link_to("YourSongs", "/") %>
      </div>
      <div class="header-menus">
        <ul>
          <li>
            <%= link_to("ユーザー一覧", "/users") %> 
          </li>
          <li>
            <%= link_to("新規登録", "/signup") %> 
          </li>
          <li>
            <%= link_to("YourSongsとは", "/about") %>
          </li>
          <li>
            <%= link_to("投稿一覧", "/posts") %>
          </li>
          <li>
            <%= link_to("新規投稿", "/posts/new") %>
          </li>
        </ul>
      </div>
    </header>
    <% if flash[:notice] %>
      <div class="flash">
        <%= flash[:notice] %>
      </div>
    <% end %>
   <%= yield %>
  </body>
</html>
