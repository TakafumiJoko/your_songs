<div class="main posts-index">
  <div class="container">
    <% @posts.each do |post| %>
      <div class="posts-index-item">
        <img src="<%= "/user_images/#{post.user.image_name}" %>">
        <%= link_to(post.user.name, "/users/#{post.user.id}") %>
        <%= link_to(post.content, "/posts/#{post.id}") %>
       </div>
    <% end %>
  </div>
</div>